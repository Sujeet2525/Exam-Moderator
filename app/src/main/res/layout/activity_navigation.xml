<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".NavigationActivity"
    android:background="#121B26">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderator"
            android:textColor="#FF9800"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Center Navigation"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow the route to reach your test center"
            android:textColor="#A9A9A9"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Error Map Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="!"
                android:textSize="32sp"
                android:textColor="#A9A9A9"
                android:layout_marginBottom="8dp" />

            <TextView
                android:text="Oops! Something went wrong."
                android:textColor="#A9A9A9"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="This page didnâ€™t load Google Maps correctly.\nSee the JavaScript console for technical details."
                android:textColor="#A9A9A9"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnGoogleMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open in Google Maps"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:backgroundTint="#FF9800"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAppleMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open in Apple Maps"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/baseline_my_location_24"
            android:backgroundTint="#2E3B4E"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:backgroundTint="#2E3B4E"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />



        <!-- Footer Bar -->


    </LinearLayout>
</ScrollView>
